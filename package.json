{
  "name": "pikit-web",
  "version": "0.0.1",
  "description": "Pikit web",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "restart": "npm run build && npm run start",
    "build": "npm run clear && npm run build-server && npm run build-client && npm run build-shop",
    "clear": "rm -rf dist",
    "build-server": "webpack --mode production --config webpack.config.server.js",
    "build-client": "MODULE=client npm run webpack-prod",
    "dev-client": "MODULE=client npm run webpack-dev",
    "build-shop": "MODULE=shop npm run webpack-prod",
    "dev-shop": "MODULE=shop npm run webpack-dev",
    "webpack-prod": "webpack --mode production --config webpack.config.prod.js",
    "webpack-dev": "webpack-dev-server --config webpack.config.dev.js"
  },
  "author": "David",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy": "^1.18.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "ejs": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
